<Window
    x:Class="WinAppCliOcr.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Windows OCR"
    Width="900"
    Height="600"
    AllowDrop="True"
    DragOver="Window_DragOver"
    Drop="Window_Drop"
    mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,12"
            Orientation="Horizontal">
            <Button
                x:Name="BtnSelectImage"
                Margin="0,0,8,0"
                Padding="16,8"
                Click="BtnSelectImage_Click"
                Content="Select Image" />
            <Button
                x:Name="BtnPaste"
                Margin="0,0,8,0"
                Padding="16,8"
                Click="BtnPaste_Click"
                Content="Paste (Ctrl+V)" />
            <ComboBox
                x:Name="CmbLanguage"
                Width="150"
                Margin="0,0,8,0"
                VerticalContentAlignment="Center" />
            <Button
                x:Name="BtnRecognize"
                Padding="16,8"
                Click="BtnRecognize_Click"
                Content="Recognize Text"
                IsEnabled="False" />
        </StackPanel>

        <!--  Image Panel  -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,8,0"
            Background="#F5F5F5"
            BorderBrush="#CCCCCC"
            BorderThickness="1">
            <Grid>
                <TextBlock
                    x:Name="TxtImagePlaceholder"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="#888888"
                    Text="Drop image here or click 'Select Image'" />
                <Image
                    x:Name="ImgPreview"
                    Margin="8"
                    Stretch="Uniform" />
            </Grid>
        </Border>

        <!--  Result Panel  -->
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="8,0,0,0"
            BorderBrush="#CCCCCC"
            BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Margin="8"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="Recognized Text" />
                    <Button
                        x:Name="BtnCopy"
                        Margin="12,0,0,0"
                        Padding="8,4"
                        Click="BtnCopy_Click"
                        Content="Copy"
                        IsEnabled="False" />
                </StackPanel>
                <TextBox
                    x:Name="TxtResult"
                    Grid.Row="1"
                    Margin="8,0,8,8"
                    AcceptsReturn="True"
                    FontSize="14"
                    IsReadOnly="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </Grid>
        </Border>

        <!--  Status Bar  -->
        <StatusBar
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="0,12,0,0">
            <StatusBarItem>
                <TextBlock x:Name="TxtStatus" Text="Ready" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
